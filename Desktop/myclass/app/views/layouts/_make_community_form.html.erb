<%= form_for Community.new do |f| %>
	<form class="form-horizontal" role="form">
		<div class="form-group">
	    <%= f.label :name, "名前",:class=>'col-sm-2 control-label' %>
	    <div class="col-sm-10">
	      <%= f.text_field :name, autofocus: true, placeholder: 'コミュニティの名前', :class=>'form-control' %>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label :desc,"説明", :class=>'col-sm-2 control-label' %>
	    <div class="col-sm-10">
	      <%= f.text_area :desc, placeholder: 'コミュニティの説明', :class=>'form-control' %>
	    </div>
	  </div>

	  <br><br><br><br><br>

		<div class="col-md-6 col-md-offset-3">
		<br>
			<%= f.submit "Make!", :class=>'btn btn-info btn-lg btn-block' %><br><br>
		</div>
	</form>

<%end %>